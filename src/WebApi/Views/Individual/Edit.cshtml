@using MyApp.Application.Models.Requests.Customers.Individuals
@model IndividualEditReq

@{
    ViewData["Title"] = "Edit Individual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Edit Individual Customer</h1>
    @Html.ValidationSummary()
    <form asp-action="Edit" asp-controller="Individual" method="post" enctype="application/x-www-form-urlencoded">

        <div class="update-customer-div">

            @Html.Hidden("Id", Model.Id)

            @await Html.PartialAsync("Customers/_IndividualInfo", Model)

            @await Html.PartialAsync("Customers/_GlobalInfo", Model)

            @await Html.PartialAsync("Customers/Edit/_DetailsReadOnlyForm", Model)

            @await Html.PartialAsync("Customers/Edit/_FromFooter", Model.Controller)
            
        </div>
    </form>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}