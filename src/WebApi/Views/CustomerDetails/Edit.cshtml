@model MyApp.Application.Models.Requests.CustomersDetails.CustomerDetailsEditReq

@{
    ViewData["Title"] = "Edit Individual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Edit Individual Customer</h1>
    @Html.ValidationSummary()
    <form asp-action="Edit" asp-controller="CustomerDetails" method="post" enctype="application/x-www-form-urlencoded">


        @Html.Hidden("Id", Model.Id)
        @Html.Hidden("CustomerId", Model.CustomerId)
        @Html.Hidden("CustomerType", Model.CustomerType)
        @Html.Hidden("Controller", Model.Controller)

        <div class="update-customer-div">
            <div class="form-row">
                <div class="col-6 col-md-4">
                    <div class="form-group col">
                        <label asp-for="@Model.Street" class="col control-label"></label>
                        <br>
                        <div class="col">
                            @Html.TextBoxFor(m => m.Street, new { placeholder = "Street", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Street)
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-4">
                    <div class="form-group col">
                        <label asp-for="@Model.City" class="col control-label"></label>
                        <br>
                        <div class="col">
                            @Html.TextBoxFor(m => m.City, new { placeholder = "City", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City)
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-4">
                    <div class="form-group col">
                        <label asp-for="@Model.PostalCode" class="col control-label"></label>
                        <br>
                        <div class="col">
                            @Html.TextBoxFor(m => m.PostalCode, new { placeholder = "Postal code", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PostalCode)
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col-6 col-md-6">
                    <div class="form-group col">
                        <label asp-for="@Model.State" class="col control-label"></label>
                        <br>
                        <div class="col">
                            @Html.TextBoxFor(m => m.State, new { placeholder = "State", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.State)
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-6">
                    <div class="form-group col">
                        <label asp-for="@Model.Country" class="col control-label"></label>
                        <br>
                        <div class="col">
                            @Html.TextBoxFor(m => m.Country, new { placeholder = "Country", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Country)
                        </div>
                    </div>
                </div>
            </div>

            <hr/>

            <div class="form-row">
                <div class="col-6 col-md-6">
                    <div class="form-group col">
                        <a href="@Url.Action("Edit", $"{Model.Controller}", new { id = Model.CustomerId })" class="btn btn-outline-secondary">
                            <i class="fas fa-step-backward"></i> Cancel
                        </a>
                    </div>
                </div>
                <div class="col-6 col-md-6">
                    <div class="form-group col">
                        <div class="col-sm-12 btn-submit">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"/>
    }

}