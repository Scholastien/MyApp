@using Microsoft.AspNetCore.Mvc.TagHelpers
@using MyApp.Infrastructure.Extensions
@using MyApp.Application.Models.DTOs.Customers
@model IList<CompanyDto>

@{
    ViewData["Title"] = "Company";
}

<div class="text-right">
    <button type="button" class="btn btn-primary">
        <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Add">
            <i class="fas fa-user-plus"></i> Add Company
        </a>
    </button>
</div>

<hr/>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Kbis</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var (data, index) in Model.WithIndex())
    {
        <tr>
            <th scope="row">@index</th>
            <td>@data.Email</td>
            <td>@data.Kbis</td>
            <td>
                <div class="btn-group" role="group" aria-label="customer-edit-group">
                    <button type="button" class="btn btn-warning">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Edit" asp-route-id="@data.Id">
                            <i class="fas fa-user-edit"></i>
                        </a>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <a class="nav-link text-dark" href="@Url.Action("Delete", "Company", new {id = data.Id})">
                            <i class="fas fa-trash"></i>
                        </a>
                    </button>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>