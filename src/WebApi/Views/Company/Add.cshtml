@using MyApp.Application.Models.Requests.Customers.Companies
@model CompanyCreateReq

@{
    ViewData["Title"] = "Add Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h1>Add Company</h1>
    @Html.ValidationSummary()
    <form asp-action="Add" asp-controller="Company" method="post" enctype="application/x-www-form-urlencoded">

        <div class="register-div">
            

            @* @Html.Hidden("DifferentBillingAndShipping", Model.DifferentBillingAndShipping) *@

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "e-mail", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Kbis" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Kbis, new { placeholder = "e-mail", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Kbis)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Add Company</button>
                </div>
            </div>
        </div>
    </form>
</div>